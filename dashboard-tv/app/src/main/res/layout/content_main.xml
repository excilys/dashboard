<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.activities.DashboardActivity"
    tools:showIn="@layout/activity_main">

    <fragment
        android:id="@+id/splash_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.excilys.shoofleurs.dashboard.ui.fragments.SplashScreenFragment"
        tools:layout="@layout/fragment_splash_screen"/>

    <com.excilys.shoofleurs.dashboard.ui.utils.ViewPagerCustomDuration
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.excilys.shoofleurs.dashboard.ui.utils.ViewPagerCustomDuration>

    <fragment
        android:id="@+id/news_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:name="com.excilys.shoofleurs.dashboard.ui.fragments.NewsFragment"
        tools:layout="@layout/fragment_news_bar"/>
</RelativeLayout>
